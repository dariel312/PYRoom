<Window 
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
       Title="PYRoom" Height="464" Width="738">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid Name="sidebar" Width="170" VerticalAlignment="Stretch" Background="#FF434347">
            <Grid.RowDefinitions>
                <RowDefinition Height ="Auto"/>
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <Button Height="32" Margin="15,15,15,0" VerticalAlignment="Top" Background="White" Click="NewRoom_Click">New Room</Button>
            <ListBox Margin="15,15,15,10" VerticalAlignment="Stretch" Grid.Row="1" Background="Transparent" BorderBrush="#FF7F7E86" Foreground="#FFD7D7D7">
            </ListBox>
        </Grid>
        <Grid Name="main" VerticalAlignment="Stretch" Margin="0,0,0,0" Grid.Column="1" >
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="80"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="100"/>
                </Grid.RowDefinitions>
                <!--<Button HorizontalAlignment="Left" FontWeight="SemiBold" Grid.Row="1" Background="#00000000" BorderBrush="#00000000" Foreground="#FFD12222" FontSize="14">X</Button>-->
                <TextBox Margin="10,10,10,10" TextWrapping="Wrap" AcceptsReturn="true" Grid.ColumnSpan="2" Grid.Row="1" Name="messages"  Text="test" VerticalScrollBarVisibility="Visible"/>
                <TextBox Margin="10,10,0,10" TextWrapping="Wrap" VerticalAlignment="Stretch" Grid.ColumnSpan="1" Grid.Row="2" Text="{Binding myMessage, Mode=TwoWay}" VerticalScrollBarVisibility="Visible"/>
                <Button Margin="10,0,10,10" VerticalAlignment="Bottom" Height="30"  Grid.Column="1" Grid.Row="2" HorizontalAlignment="Stretch" Background="#FF118EF5" BorderBrush="#00000000" Foreground="#FFFFFBFB" Click="Send_Click">Send</Button>
            </Grid>
            <Button Width="32" Height="32" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left" Background="White" Click="SideBar_ToggleClick">&gt;</Button>
        </Grid>
    </Grid>
</Window> 
    