<Window 
       xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation" 
       xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml" 
       Title="PYRoom" Height="464" Width="738">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
        </Grid.ColumnDefinitions>
        <Grid Name="sidebar" Width="170" VerticalAlignment="Stretch" Background="#eeeeee">
            <Button Height="32" Margin="15,15,15,0" VerticalAlignment="Top" Background="White" Click="NewRoom_Click">New Room</Button>
        </Grid>
        <Grid Name="main" VerticalAlignment="Stretch" Margin="0,0,0,0" Grid.Column="1">
            <TabControl>
                <TabItem Header="My Chat Room">
                    <Grid>
                        <TextBox TextWrapping="Wrap" Text="TextBox" AcceptsReturn="true" Margin="10,10,10,0" VerticalAlignment="Top" Height="255"/>
                        <TextBox TextWrapping="Wrap" Text="TextBox" Margin="10,0,10,10" VerticalAlignment="Bottom" Height="87"/>
                    </Grid>

                </TabItem>
                <TabItem Header="Johns Chat Room" />
                <TabItem Header="Details" />
            </TabControl>
            <Button Width="32" Height="32" FontSize="16" VerticalAlignment="Center" HorizontalAlignment="Left" Background="White" Click="SideBar_ToggleClick">&gt;</Button>
        </Grid>
    </Grid>

</Window> 
    