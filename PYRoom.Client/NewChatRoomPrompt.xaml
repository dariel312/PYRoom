<Window xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="New Chat Room" 
        SizeToContent="WidthAndHeight" 
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    <Grid>
        <Label>Room Name</Label>
        <TextBox HorizontalAlignment="Left" Height="24" Margin="10,26,10,0" TextWrapping="Wrap" Name="input_name" VerticalAlignment="Top" Width="230"/>
        <Button Content="Submit" HorizontalAlignment="Left" Margin="78,60,0,10" VerticalAlignment="Top" Width="90" Height="28" Click="Click_Submit" IsCancel="true"/>

    </Grid>
</Window>
